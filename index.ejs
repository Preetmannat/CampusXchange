<% layout("/layouts/boilerplate") %>

    <div class="mt-3">
        
    <h3>All Items</h3>
    <!-- <form method="GET" action="/Item/new">
        <button>Add New Item</button>
    </form> -->
    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1">
    <%for(item of Items){%>
        <a href="/Items/<%=item._id%>" class="listing-link">
    <div class="card" style="width: 18rem;">
        <img src="<%= item.image %>" class="card-img-top" alt="Item_image" style="height:17rem">
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%=item.title%></b><br>
            &#8377;<%=item.price.toLocaleString("en-IN")%>
          </p>
        </div>
      </div>
    </a>
      <%}%>
   
    </div>
</div>

